<div class="container-fluid" style="background-color: #0E3B31; min-height: 100vh;">
    <div class="row h-100">
        <div class="col-md-3 p-3" style="background-color: #1A3E37;">
            @await Html.PartialAsync("Sidebar")
        </div>

        <div class="col-md-9 p-4" style="background-color: #f8f9fa;">
            <div class="card shadow-lg border-0 mb-4" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header bg-white border-0 py-3" style="border-bottom: 1px solid rgba(0,0,0,0.1);">
                    <h4 class="mb-0 text-dark font-weight-bold">
                        <i class="fas fa-clipboard-list mr-2" style="color: #0E3B31;"></i>Employee Satisfaction Survey
                    </h4>
                </div>

                <div class="card-body px-4 py-3">
                    <!-- Confidentiality Notice -->
                    <div class="alert alert-info border-0 shadow-sm mb-4" style="border-radius: 10px; background-color: #e9f7fe;">
                        <div class="d-flex align-items-center">
                            <div class="mr-3 text-info">
                                <i class="fas fa-lock fa-2x" style="color: #0E3B31;"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading font-weight-bold" style="color: #0E3B31;">Confidential Survey</h5>
                                <p class="mb-2" style="color: #2c3e50;">Your responses are anonymous and will only be used to improve workplace conditions.</p>
                            </div>
                        </div>
                    </div>

                    <form id="predictForm" method="post" action="/Survey/Submit">
                        <!-- Personal Information Section -->
                        <div class="card mb-4 border-0 shadow-sm" style="border-radius: 12px;">
                            <div class="card-header bg-light border-0 py-3" style="background-color: #f1f8f6; border-radius: 12px 12px 0 0;">
                                <h5 class="mb-0" style="color: #0E3B31;">
                                    <i class="fas fa-user-circle mr-2"></i>Personal Information
                                </h5>
                            </div>
                            <div class="card-body" style="background-color: #ffffff; border-radius: 0 0 12px 12px;">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="age" class="font-weight-bold" style="color: #2c3e50;">Age</label>
                                            <input type="number" class="form-control" id="age" name="Age" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="maritalStatus" class="font-weight-bold" style="color: #2c3e50;">Marital Status</label>
                                            <select class="form-control" id="maritalStatus" name="MaritalStatus" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="0">Single</option>
                                                <option value="1">Married</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="distanceFromHome" class="font-weight-bold" style="color: #2c3e50;">
                                                Distance from Home <small class="text-muted">(in km)</small>
                                            </label>
                                            <input type="number" class="form-control" id="distanceFromHome" name="DistanceFromHome" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="monthlyIncome" class="font-weight-bold" style="color: #2c3e50;">
                                                Monthly Income <small class="text-muted">(Enter in RM)</small>
                                            </label>
                                            <input type="number" class="form-control" id="monthlyIncome" name="MonthlyIncome" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Job Information Section -->
                        <div class="card mb-4 border-0 shadow-sm" style="border-radius: 12px;">
                            <div class="card-header bg-light border-0 py-3" style="background-color: #f1f8f6; border-radius: 12px 12px 0 0;">
                                <h5 class="mb-0" style="color: #0E3B31;">
                                    <i class="fas fa-briefcase mr-2"></i>Job Information
                                </h5>
                            </div>
                            <div class="card-body" style="background-color: #ffffff; border-radius: 0 0 12px 12px;">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="department" class="font-weight-bold" style="color: #2c3e50;">Department</label>
                                            <select class="form-control" id="department" name="department" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="sales">Sales</option>
                                                <option value="technical">Technical</option>
                                                <option value="support">Support</option>
                                                <option value="hr">Human Resources</option>
                                                <option value="management">Management</option>
                                                <option value="product_mng">Product Management</option>
                                                <option value="marketing">Marketing</option>
                                                <option value="IT">IT</option>
                                                <option value="RandD">Research and Development</option>
                                                <option value="accounting">Accounting</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="businessTravel" class="font-weight-bold" style="color: #2c3e50;">Business Travel</label>
                                            <select class="form-control" id="businessTravel" name="BusinessTravel" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="0">Travel Rarely</option>
                                                <option value="1">Travel Frequently</option>
                                                <option value="2">Non-Travel</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="totalWorkingYears" class="font-weight-bold" style="color: #2c3e50;">Total Working Years</label>
                                            <input type="number" class="form-control" id="totalWorkingYears" name="TotalWorkingYears" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="yearsAtCompany" class="font-weight-bold" style="color: #2c3e50;">Years at Company</label>
                                            <input type="number" class="form-control" id="yearsAtCompany" name="YearsAtCompany" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="jobInvolvement" class="font-weight-bold" style="color: #2c3e50;">
                                                Job Involvement <small class="text-muted">(1 = Low, 5 = Very High)</small>
                                            </label>
                                            <input type="number" class="form-control" id="jobInvolvement" name="JobInvolvement" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="stockOptionLevel" class="font-weight-bold" style="color: #2c3e50;">
                                                Stock Option Level <small class="text-muted">(0 = No options, Higher = More options)</small>
                                            </label>
                                            <input type="number" class="form-control" id="stockOptionLevel" name="StockOptionLevel" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Satisfaction Section -->
                        <div class="card mb-4 border-0 shadow-sm" style="border-radius: 12px;">
                            <div class="card-header bg-light border-0 py-3" style="background-color: #f1f8f6; border-radius: 12px 12px 0 0;">
                                <h5 class="mb-0" style="color: #0E3B31;">
                                    <i class="fas fa-chart-line mr-2"></i>Satisfaction Metrics
                                </h5>
                            </div>
                            <div class="card-body" style="background-color: #ffffff; border-radius: 0 0 12px 12px;">
                                <div class="form-group">
                                    <label for="satisfactionLevel" class="font-weight-bold" style="color: #2c3e50;">
                                        <i class="fas fa-smile mr-2"></i>Job Satisfaction
                                    </label>
                                    <div class="input-group">
                                        <input type="number" step="0.01" min="0" max="1"
                                               class="form-control" id="satisfactionLevel"
                                               name="satisfactionLevel" required
                                               placeholder="0.00 to 1.00 (e.g., 0.75 = 75% satisfied)"
                                               style="border-radius: 8px; border: 1px solid #ddd;">
                                        <div class="input-group-append">
                                            <span class="input-group-text bg-white" style="border-radius: 0 8px 8px 0;">
                                                <small class="text-muted">0 (Low) - 1 (High)</small>
                                            </span>
                                        </div>
                                    </div>
                                    <small class="form-text text-muted">
                                        Rate your overall job satisfaction (0 = Very dissatisfied, 0.5 = Neutral, 1 = Very satisfied)
                                    </small>
                                </div>

                                <div class="form-group mt-4">
                                    <label for="lastEvaluation" class="font-weight-bold" style="color: #2c3e50;">
                                        <i class="fas fa-star mr-2"></i>Performance Rating
                                    </label>
                                    <div class="input-group">
                                        <input type="number" step="0.01" min="0" max="1"
                                               class="form-control" id="lastEvaluation"
                                               name="lastEvaluation" required
                                               placeholder="0.00 to 1.00 (e.g., 0.85 = 85%)"
                                               style="border-radius: 8px; border: 1px solid #ddd;">
                                        <div class="input-group-append">
                                            <span class="input-group-text bg-white" style="border-radius: 0 8px 8px 0;">
                                                <small class="text-muted">0 (Poor) - 1 (Excellent)</small>
                                            </span>
                                        </div>
                                    </div>
                                    <small class="form-text text-muted">
                                        Your most recent performance evaluation score (0 = Needs improvement, 0.7 = Meets expectations, 1 = Outstanding)
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Work Conditions Section -->
                        <div class="card mb-4 border-0 shadow-sm" style="border-radius: 12px;">
                            <div class="card-header bg-light border-0 py-3" style="background-color: #f1f8f6; border-radius: 12px 12px 0 0;">
                                <h5 class="mb-0" style="color: #0E3B31;">
                                    <i class="fas fa-clock mr-2"></i>Work Conditions
                                </h5>
                            </div>
                            <div class="card-body" style="background-color: #ffffff; border-radius: 0 0 12px 12px;">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="averageMonthlyHours" class="font-weight-bold" style="color: #2c3e50;">Average Monthly Hours</label>
                                            <input type="number" class="form-control" id="averageMonthlyHours" name="averageMonthlyHours" required style="border-radius: 8px; border: 1px solid #ddd;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="overTime" class="font-weight-bold" style="color: #2c3e50;">OverTime</label>
                                            <select class="form-control" id="overTime" name="OverTime" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="1">Yes</option>
                                                <option value="0">No</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="workAccident" class="font-weight-bold" style="color: #2c3e50;">Work Accident</label>
                                            <select class="form-control" id="workAccident" name="workAccident" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="false">No</option>
                                                <option value="true">Yes</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="promotionLast5Years" class="font-weight-bold" style="color: #2c3e50;">Promotion in Last 5 Years</label>
                                            <select class="form-control" id="promotionLast5Years" name="promotionLast5Years" required style="border-radius: 8px; border: 1px solid #ddd;">
                                                <option value="false">No</option>
                                                <option value="true">Yes</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius: 8px; background-color: #0E3B31; border-color: #0E3B31; font-weight: 600; transition: all 0.3s;">
                                <i class="fas fa-paper-plane mr-2"></i>Submit Survey
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Keep your existing JavaScript exactly as is -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('predictForm');
        form.addEventListener('submit', async function (e) {
            const formData = new FormData(form);
            const jsonData = {};
            formData.forEach((value, key) => {
                jsonData[key] = value;
            });

            try {
                const response = await fetch('http://127.0.0.1:5000/predict', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(jsonData)
                });

                const result = await response.json();
                console.log(result);
                alert("Prediction received! The data will be reviewed by an admin.");
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to predict.');
            }
        });
    });
</script>