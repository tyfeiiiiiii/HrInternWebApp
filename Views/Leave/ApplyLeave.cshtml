@model HrInternWebApp.Models.Identity.ApplyLeave
@using HrInternWebApp.Entity

@{
    var leaveBalance = ViewData["LeaveBalance"] as LeaveBalance;
}

<div class="container-fluid" style="background-color: #0E3B31; height: 100vh;">
    <div class="row h-100">
        <div class="col-md-3 p-3" style="background-color: #1A3E37;">
            @await Html.PartialAsync("Sidebar")
        </div>
        <div class="col-md-9 d-flex justify-content-center align-items-center" style="background-color: white; padding: 20px;">
            <div class="col-md-8 bg-light p-5 rounded" style="min-height: 70vh;">
                <!-- Leave Balance Dashboard -->
                <div class="mb-5">
                    <h3 class="text-center mb-4">Your Leave Balances</h3>
                    <div class="row">
                        <!-- Medical Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Medical Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.MedicalLeave</small></p>
                                <p class="card-text text-center"><small>Used: 5</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @(leaveBalance?.MedicalLeave - 5)</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Annual Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Annual Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.AnnualLeave</small></p>
                                <p class="card-text text-center"><small>Used: 3</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @(leaveBalance?.AnnualLeave - 3)</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Hospitalization -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Hospitalization</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.Hospitalization</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.Hospitalization</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Examination -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Examination</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.Examination</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.Examination</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Marriage -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Marriage</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.Marriage</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.Marriage</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Paternity Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Paternity Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.PaternityLeave</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.PaternityLeave</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Maternity Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Maternity Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.MaternityLeave</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.MaternityLeave</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Childcare Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Childcare Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.ChildcareLeave</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.ChildcareLeave</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Unpaid Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Unpaid Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.UnpaidLeave</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.UnpaidLeave</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>

                        <!-- Emergency Leave -->
                        <div class="col-md-3 mb-3">
                            <div class="card p-2">
                                <h6 class="card-title text-center">Emergency Leave</h6>
                                <p class="card-text text-center"><small>Owned: @leaveBalance?.EmergencyLeave</small></p>
                                <p class="card-text text-center"><small>Used: 0</small></p> <!-- Replace with actual used days -->
                                <p class="card-text text-center"><small>Available: @leaveBalance?.EmergencyLeave</small></p> <!-- Replace with actual calculation -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Apply Leave Form -->
                <h2 class="text-center mb-5">Request Leave</h2>
                <form asp-action="ApplyLeave" method="post">
                    <div class="form-group row mb-5">
                        <input type="hidden" id="hiddenLeaveTypes" name="HiddenLeaveTypes" />

                        <label asp-for="leaveType" class="col-sm-3 col-form-label">Leave type:</label>
                        <div class="col-sm-9">
                            <select id="leaveType" asp-for="leaveType" class="form-control">
                                <option value="">Select leave type</option>
                                @if (ViewData["LeaveTypes"] != null)
                                {
                                    var leaveTypes = ViewData["LeaveTypes"] as List<string>;
                                    foreach (var type in leaveTypes)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="leaveType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-5">
                        <label asp-for="startDate" class="col-sm-3 col-form-label">Duration:</label>
                        <div class="col-sm-4">
                            <input asp-for="startDate" class="form-control" type="date" id="startDate" />
                            <span asp-validation-for="startDate" class="text-danger"></span>
                        </div>
                        <div class="col-sm-1 text-center">to</div>
                        <div class="col-sm-4">
                            <input asp-for="endDate" class="form-control" type="date" id="endDate" />
                            <span asp-validation-for="endDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-5">
                        <label asp-for="reason" class="col-sm-3 col-form-label">Description:</label>
                        <div class="col-sm-9">
                            <textarea asp-for="reason" class="form-control" placeholder="Type your description here" style="height: 150px;"></textarea>
                            <span asp-validation-for="reason" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Home" class="btn btn-success">Back to Home</a>
                        <button type="submit" class="btn btn-primary">Save & Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
